<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_layout_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <FrameLayout
                    style="@style/HeaderFrameStyle">

                    <ImageView
                        android:id="@+id/return_image"
                        style="@style/ArrowBackImageViewStyle" />

                </FrameLayout>

                <FrameLayout
                    style="@style/HeaderFrameStyle"
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/header_text_padding_top">

                    <TextView
                        style="@style/HeaderTextViewStyle"
                        android:text="@string/search_title" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            style="@style/SearchFrameStyle">

            <EditText
                android:theme="@style/Theme.PlaylistMaker.SearchEditTexts"
                android:id="@+id/search_editText"
                style="@style/SearchEditTextStyle"/>
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>