<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_screen_bg_color"
        android:orientation="vertical"
        android:paddingTop="@dimen/title_padding_size"
        android:paddingLeft="@dimen/screen_padding_size"
        android:paddingRight="@dimen/screen_padding_size"
        android:paddingBottom="@dimen/from_content_to_bottom_padding_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_screen_bg_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="@string/app_name"
                android:textColor="@color/main_screen_title_color"
                android:textSize="@dimen/screen_title_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/from_title_to_content_padding_size"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/open_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_bg_color"
                android:text="@string/search_title"
                android:textAllCaps="false"
                android:textColor="@color/button_title_color"
                android:textSize="@dimen/button_title_text_size"
                android:foreground="?attr/selectableItemBackground"
                app:icon="@drawable/icon_search"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/from_icon_to_button_padding_size"
                app:iconTint="@color/button_title_color"
                app:cornerRadius="@dimen/button_corner_radius"/>

            <Button
                android:id="@+id/open_media_library"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_bg_color"
                android:text="@string/media_library_title"
                android:textAllCaps="false"
                android:textColor="@color/button_title_color"
                android:textSize="@dimen/button_title_text_size"
                android:foreground="?attr/selectableItemBackground"
                app:icon="@drawable/media_library"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/from_icon_to_button_padding_size"
                app:iconTint="@color/button_title_color"
                app:cornerRadius="@dimen/button_corner_radius"/>

            <Button
                android:id="@+id/open_settings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_bg_color"
                android:text="@string/settings_title"
                android:textAllCaps="false"
                android:textColor="@color/button_title_color"
                android:textSize="@dimen/button_title_text_size"
                android:foreground="?attr/selectableItemBackground"
                app:icon="@drawable/settings_icon"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/from_icon_to_button_padding_size"
                app:iconTint="@color/button_title_color"
                app:cornerRadius="@dimen/button_corner_radius"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

