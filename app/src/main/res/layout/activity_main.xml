<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/MainActivityLinearLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/HeaderTextViewStyle"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/app_name"
            android:textColor="?attr/colorSecondary"
            android:textSize="@dimen/screen_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_from_header_to_content">

            <Button
                android:id="@+id/open_search"
                style="@style/MainActivityButtonStyle"
                android:layout_marginBottom="@dimen/padding_between_buttons"
                android:text="@string/search_title"
                app:icon="@drawable/icon_search" />

            <Button
                android:id="@+id/open_media_library"
                style="@style/MainActivityButtonStyle"
                android:layout_marginBottom="@dimen/padding_between_buttons"
                android:text="@string/media_library_title"
                app:icon="@drawable/media_library" />

            <Button
                android:id="@+id/open_settings"
                style="@style/MainActivityButtonStyle"
                android:text="@string/settings_title"
                app:icon="@drawable/settings_icon" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

