<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- LinearLayout styles-->
    <style name="MainLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- TextView styles-->
    <style name="HeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/small_icon_size</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/screen_title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <!--<item name="android:textFontWeight">@dimen/header_font_weight</item>>-->
        <item name="android:textFontWeight">500</item>>
    </style>

    <style name="MenuItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/menu_item_title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <!--<item name="android:textFontWeight">@dimen/menu_item_font_weight</item>>-->
        <item name="android:textFontWeight">400</item>>
    </style>

    <!-- Button styles-->
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!--<item name="android:stateListAnimator">@animator/mtrl_btn_unelevated_state_list_anim</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>-->

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/button_title_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <!--<item name="android:textFontWeight">@dimen/header_font_weight</item>>-->
        <item name="android:textFontWeight">500</item>>
        <item name="android:letterSpacing">0</item>
        <!-- MaterialComponents -->
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_from_icon_to_button_title</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- ImageView styles-->
    <style name="ArrowBackImageViewStyle">
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="MenuItemIconImageViewStyle">
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
    </style>
</resources>