<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAIN ACTIVITY STYLES -->
    <style name="MainActivityLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:background">?attr/mainActivityBackgroundColor</item>
    </style>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/button_title_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>>
        <item name="android:letterSpacing">0</item>
        <!-- MaterialComponents -->
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_from_icon_to_button_title</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- SETTINGS ACTIVITY STYLES -->
    <style name="MenuItemFrameStyle">
        <item name="android:layout_height">@dimen/menu_item_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="SwitchStyle">
        <item name="android:layout_width">@dimen/big_icon_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:thumbTint">?attr/switcherThumbTint</item>
        <item name="android:trackTint">?attr/switcherTrackTint</item>
    </style>
    <style name="MenuItemsLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
    </style>
    <style name="MenuItemTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/menu_item_title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>>
    </style>

    <!-- SEARCH ACTIVITY STYLES -->
    <style name="SearchFrameStyle">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
    <style name="SearchEditTextStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/menu_item_title_text_size</item>

        <!-- INHERITS FROM THEME -->
        <item name="android:textColorHint">?attr/editTextHintColor</item>
        <item name="android:drawableTint">?attr/editTextDrawableTint</item>
        <item name="android:background">?attr/editTextBackgroundDrawable</item>
    </style>
    <style name="ClearImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/clear_icon_gray_24</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>>

    <!-- HEADER STYLES -->
    <style name="HeaderLinearLayoutStyle">
        <item name="android:layout_height">@dimen/header_layout_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="HeaderFrameStyle">
        <item name="android:layout_height">@dimen/header_frame_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/header_frame_padding</item>
        <item name="android:paddingTop">@dimen/header_text_padding_top</item>
    </style>
    <style name="HeaderImageFrameStyle">
        <item name="android:layout_height">@dimen/header_frame_size</item>
        <item name="android:layout_width">@dimen/header_frame_size</item>
        <item name="android:padding">@dimen/header_frame_padding</item>
    </style>
    <style name="HeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/screen_title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>>
    </style>

    <!-- MULTI USAGE STYLES -->
    <style name="otherActivityLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">?attr/otherActivityBackgroundColor</item>
    </style>
    <style name="ArrowBackImageViewStyle">
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>
    <style name="MenuItemIconImageViewStyle">
        <item name="tint">?attr/menuItemIconTint</item>
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
    </style>

</resources>